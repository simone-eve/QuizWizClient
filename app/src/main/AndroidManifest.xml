<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:theme="@style/Theme.QuizWiz3"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">

        <!-- Activities -->
        <activity android:name=".Dashboard" android:exported="false" />
        <activity android:name=".Login" android:exported="false" />
        <activity android:name=".QuestionsAdapter" android:exported="false" />
        <activity android:name=".Profile" android:exported="true" />
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".ChatGPTResult" android:exported="true" />
        <activity android:name=".TrueorFalse" android:exported="true" />
        <activity android:name=".MultiChoice" android:exported="true" />
        <activity android:name=".PlayerSelection"
            android:theme="@style/Theme.QuizWiz3"
            android:exported="true" />
        <activity android:name=".Settings"
            android:theme="@style/Theme.QuizWiz3"
            android:exported="true" />
        <activity android:name=".GameSettings" android:exported="false" android:theme="@style/Theme.QuizWiz3"/>
        <activity android:name=".HelpSupport" android:exported="false" android:theme="@style/Theme.QuizWiz3"/>
        <activity android:name=".About" android:exported="true" android:theme="@style/Theme.QuizWiz3"/>
        <activity android:name=".Results" android:exported="true" />

        <!-- Launcher Activity -->
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.QuizWiz3"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
